    <thead>
        <tr>
            <td>Mã nhà cung cấp</td>
            <td>Tên nhà cung cấp</td>
            <td>Địa chỉ</td>
            <td>SĐT</td>
            <td>Email</td>
            @*<td>Trth</td>*@            
            <td>Sửa</td>
            <td>Xóa</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in lstCC)
        {
            if (item.TrangThai == true)
            {
        <tr>
            <td>@item.MaNcc</td>
            <td>@item.TenNcc</td>
            <td>@item.DiaChi</td>
            <td>@item.Sdt</td>
            <td>@item.Email</td>
            @*<td>@item.TrangThai</td>*@
            @*<td><a href="~/Admin_layout/@item.TenNv">Xóa</a></td>*@
            <td><button><a asp-area="" asp-controller="Admin" asp-action="load_DataNCC" asp-route-id="@item.MaNcc">Sửa</a></button></td>
            <td><button><a asp-area="" asp-controller="Admin" asp-action="NhaCungCap_xoa" asp-route-id="@item.MaNcc">Xóa</a></button></td>
        </tr>
            }

        }
    </tbody>
</table>

