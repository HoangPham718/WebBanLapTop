@* Hiển thị danh sách nhân viên*@
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Mã khuyến mãi</td>
            <td>Tên khuyến mãi</td>
            <td>Mô tả</td>
            <td>Loại khuyến mãi</td>
            <td>Ngày bắt đầu</td>
            <td>Ngày kết thúc</td>
            <td>Sửa</td>
            <td>Xóa</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in lstKM)
        {
            if (item.TrangThai == true)
            {
        <tr>
            <td>@item.MaKm</td>
            <td>@item.TenKm</td>
            <td>@item.MoTa</td>
            <td>@item.LoaiKm</td>
            <td>@item.NgayBd</td>
             <td>@item.NgayKt</td>
            <td><button><a asp-area="" asp-controller="Admin" asp-action="load_DataKM" asp-route-id="@item.MaKm">Sửa</a></button></td>
            <td><button><a asp-area="" asp-controller="Admin" asp-action="KhuyenMai_xoa" asp-route-id="@item.MaKm">Xóa</a></button></td>
        </tr>
            }
        }
    </tbody>
</table>


