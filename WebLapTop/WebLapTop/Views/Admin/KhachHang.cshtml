                                                    <label for="email"><i class="zmdi zmdi-email"></i></label>
                                                    <label for="fname" style="padding-right:44px">Mã khuyến mãi: </label>
                                                    <input name="MaKm" id="MaKm" type="text" value="@update.MaKm" />
