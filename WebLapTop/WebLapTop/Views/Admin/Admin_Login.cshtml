
@{
    ViewData["Title"] = "Admin_Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    var account = ViewData["Account"] as AccountLogin;
}
@model WebLapTop.Models.AccountLogin
<div class="main">

    <!-- Sing in  Form -->
    <section class="sign-in">
        <div class="container-1">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="~/img/signin-image.jpg" alt="sing up image"></figure>

                </div>

                <div class="signin-form">
                    <h2 class="form-title">TRANG CHO ADMIN</h2>
                    @using (Html.BeginForm("Admin_Login", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <form method="POST" class="register-form" id="login-form">
                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @if (String.IsNullOrEmpty(account.Email))
                                {
                                    <input type="text" name="Email" id="your_name" value="" placeholder="Email" />
                                    @*@Html.TextBoxFor(a => a.Email, new { @name = "your_name", @id = "your_name", @placeholder = "Email" })*@
                                }
                                else
                                {
                                    <input type="text" name="Email" id="your_name" value="@account.Email" placeholder="Email" />
                                    @*@Html.TextBoxFor(a => a.Email, new { @name = "your_name", @id = "your_name", @Value = account.Email })*@
                                }
                            </div>
                            <div class="form-group">
                                <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                                @if (String.IsNullOrEmpty(account.MatKhau))
                                {
                                    @Html.PasswordFor(a => a.MatKhau, new { @name = "your_pass", @id = "your_pass", @placeholder = "Mật khẩu" })
                                }
                                else
                                {
                                    @Html.PasswordFor(a => a.MatKhau, new { @name = "your_pass", @id = "your_pass", @value = account.MatKhau })
                                }
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signin" id="signin" class="form-submit" value="Đăng nhập" />
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </section>
</div>