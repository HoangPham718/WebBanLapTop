@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    var account = ViewData["Account"] as AccountLogin;
}
@model  WebLapTop.Models.AccountLogin
<div class="main" >
    <!-- Sing in  Form -->
    <section class="sign-in">
        <div class="container-1">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="~/img/signin-image.jpg" alt="sing up image"></figure>
                    <a asp-area="" asp-controller="Home" asp-action="Signup" class="signup-image-link">Tạo tài khoản</a>
                </div>

                <div class="signin-form">
                    <h2 class="form-title">Đăng nhập</h2>
                    @if(!String.IsNullOrEmpty(ViewData["Message"].ToString()))
                    { 
                        <p style="font-size:18px; font-weight: bold !important; color: #ff0000 !important;">@ViewData["Message"]</p>
                    }
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <form method="POST" class="register-form" id="login-form">
                            <div class="form-group">
                                <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @if (String.IsNullOrEmpty(account.Email))
                                {
                                    @Html.TextBoxFor(a => a.Email, new { @name = "your_name", @id = "your_name", @placeholder = "Email" })
                                }
                                else
                                {
                                    @Html.TextBoxFor(a => a.Email, new {   @name = "your_name", @id = "your_name",@Value=account.Email})
                                }
                            </div>
                            <div class="form-group">
                                <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                                @if (String.IsNullOrEmpty(account.MatKhau))
                                {
                                    @Html.PasswordFor(a => a.MatKhau, new { @name = "your_pass", @id = "your_pass", @placeholder = "Mật khẩu" })
                                }
                                else
                                {
                                    @Html.PasswordFor(a => a.MatKhau, new { @name = "your_pass", @id = "your_pass" ,@value=account.MatKhau})
                                }

                            </div>
                            <div class="form-group">
                                @if (String.IsNullOrEmpty(account.MatKhau))
                                {
                                    @Html.CheckBoxFor(a => a.Remember, new { @name = "remember-me", @id = "remember-me" })
                                }
                                else
                                {
                                    @Html.CheckBoxFor(a => a.Remember, new { @name = "remember-me", @id = "remember-me",@checked=account.Remember })
                                }

                                <label for="remember-me" class="label-agree-term"><span><span></span></span>Lưu tài khoản</label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signin" id="signin" class="form-submit" value="Đăng nhập" />
                            </div>
                     </form>
                    }
                    <div class="social-login">
                        <span class="social-label">Hoặc đăng nhập với</span>
                        <ul class="socials">
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                            <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
