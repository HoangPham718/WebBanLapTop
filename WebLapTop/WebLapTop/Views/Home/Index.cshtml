<div class="slider-area">
    <!-- Slider -->
    <div class="block-slider block-slider4">
        <ul class="" id="bxslider-home4">
            @foreach (var item in ViewBag.Anh)
            {
                <li>
                <img src="@item.MaAnh" alt="Slide">
                <div class="caption-group">
                    <h2 class="caption title">
                        @item.MaSpNavigation.ThuongHieu <span class="primary">@item.MaSpNavigation.TenSp </span>
                    </h2>
                    <h4 class="caption subtitle">@item.MaSpNavigation.LoaiSp</h4>
                    <a class="caption button-radius" asp-area="" asp-controller="Home" asp-action="Detail"asp-route-MaSp="@item.MaSp"><span class="icon"></span>Mua ngay</a>
                </div>
                </li>
            }
        </ul>
    </div>
    <!-- ./Slider -->
</div> <!-- End slider area -->

<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <div class="section-title-1"></div>

                    <div class="product-carousel">
                        @foreach (var item in lstPrice)
                        {
                         <div class="single-product">
                            <div class="product-f-image">
                                <img src="@item.MaAnh" alt="">
                                <div class="product-hover">
                                    <a asp-area="" asp-controller="Home" asp-action="Detail" asp-route-MaSp="@item.MaSp" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng</a>
                                    <a asp-area="" asp-controller="Home" asp-action="Detail" asp-route-MaSp="@item.MaSp" class="view-details-link"><i class="fa fa-link"></i> Xem chi tiết</a>
                                </div>
                            </div>

                            <h2><a asp-area="" asp-controller="Home" asp-action="Detail"asp-route-MaSp="@item.MaSp"> @item.MaSpNavigation.ThuongHieu @item.MaSpNavigation.TenSp</a></h2>
                            <div class="product-carousel-price">
                                <ins>@(String.Format("{0:0,0}", @item.MaSpNavigation.DonGia)) VNĐ</ins> <del style="color:red;">@(String.Format("{0:0,0}", (@item.MaSpNavigation.DonGia*1.05)))</del>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->
